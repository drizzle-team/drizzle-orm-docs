<script type="module" is:inline data-astro-rerun>
  const inkeepButton = document.getElementById("inkeepButton");

  const handleClose = () => {
    inkeepWidget.update({
      modalSettings: {
        isOpen: false,
      },
    });
  };

  const handleOpen = () => {
    let themeName = localStorage.getItem("theme");
    if (themeName === "system") {
      themeName = window.matchMedia("(prefers-color-scheme: dark)").matches
        ? "dark"
        : "light";
    }
    inkeepWidget.update({
      modalSettings: {
        isOpen: true,
      },
      baseSettings: {
        ...config.baseSettings,
        colorMode: {
          sync: {
            target: document.documentElement,
            attributes: ["class"],
            isDarkMode: (attributes) => attributes["class"]?.includes("dark"),
          },
          forcedColorMode: themeName,
        },
      },
    });
  };

  const config = {
    baseSettings: {
      apiKey: "4f4da4a5733032ef8ff23e3b7906954877fd0ee54d58d1e0",
      organizationDisplayName: "Drizzle ORM",
      primaryBrandColor: "#FFFFFF",
      styles: [
        {
          key: "custom-styles",
          type: "link",
          value: "/inkeep-styles.css",
        },
      ],
      colorMode: {
        sync: {
          target: document.documentElement,
          attributes: ["class"],
          isDarkMode: (attributes) => attributes["class"]?.includes("dark"),
        },
        forcedColorMode: "dark",
      },
    },
    modalSettings: {
      onOpenChange: (isOpen) => {
        if (!isOpen) {
          handleClose();
        }
      },
      shortcutKey: null, // Disable shortcut key
    },
    aiChatSettings: {
      aiAssistantAvatar: "/svg/drizzle.svg",
    },
    defaultView: "chat",
  };

  // Initialize the widget using the new cxkit API
  const inkeepWidget = Inkeep.ModalSearchAndChat(config);

  // Add event listener to open the Inkeep modal when the button is clicked
  inkeepButton.addEventListener("click", handleOpen);
  window.inkeepWidget = inkeepWidget;
</script>

