---
interface Props {
  stars: number;
}

const { stars} = Astro.props;
---
<a target="_blank" rel="noreferrer nofollow" href="https://github.com/drizzle-team/drizzle-orm" class="github-stars_wrap">
  <svg xmlns="http://www.w3.org/2000/svg" width="24" height="24" viewBox="0 0 24 24" fill="none" stroke="currentColor" stroke-width="2" stroke-linecap="round" stroke-linejoin="round" class="feather feather-github"><path d="M9 19c-5 1.5-5-2.5-7-3m14 6v-3.87a3.37 3.37 0 0 0-.94-2.61c3.14-.35 6.44-1.54 6.44-7A5.44 5.44 0 0 0 20 4.77 5.07 5.07 0 0 0 19.91 1S18.73.65 16 2.48a13.38 13.38 0 0 0-7 0C6.27.65 5.09 1 5.09 1A5.07 5.07 0 0 0 5 4.77a5.44 5.44 0 0 0-1.5 3.78c0 5.42 3.3 6.61 6.44 7A3.37 3.37 0 0 0 9 18.13V22"></path></svg>
  <span class="github-stars__wrap_number">{stars}k</span>
</a>

<style>
  html.dark .github-stars_wrap {
    background-color: #111;
    border: 1px solid #404040;
    color: rgb(126, 134, 140);
  }

  html.dark .github-stars_wrap:hover {
    background-color: #161616;
  }

  .github-stars_wrap:hover {
    background-color: #f8fafc;
    border-color: #d1d5db;
  }

  .github-stars_wrap {
    display: flex;
    align-items: center;
    gap: 4px;
    padding: 0 8px;
    border-radius: 4px;
    height: 36px;
    background-color: hsla(210, 7%, 95%, .27);
    border: 1px solid rgba(33, 39, 46, .12);
    color: rgb(126, 134, 140);
  }
  .github-stars__wrap_number {
    font-size: 14px;
  }


</style>
<style is:global>
  .github-stars_wrap svg {
    width: 16px;
  }
</style>